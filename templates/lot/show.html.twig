{% extends 'baseUser.html.twig' %}

{% block title %}Détails du lot{% endblock %}

{% block body %}
<br>
<br>
<br>
<br>
<br>
<br>
    <div class="container">
        <h1>Détails du lot</h1>

        <table class="table">
            <tbody>
            <tr>
                <th>Identifiant</th>
                <td>{{ lot.identifient }}</td>
            </tr>
            <tr>
                <th>Identifiant de l'enchère</th>
                <td>{{ lot.idenchere }}</td>
            </tr>
            </tbody>
        </table>

        <h4>Produits associés</h4>
        {% if produits is not empty %}
            <ul>
                {% for produit in produits %}
                    <li><h4>Nom: </h4>{{ produit.nom }}</li>
                    <li><h4>Prix: </h4>{{ produit.prix }}</li>
                    <li><h4>Prix actuel: </h4>{{ produit.prixActuel }}</li>
                    <hr>
                {% endfor %}
            </ul>
        {% else %}
            <p>Aucun produit associé à ce lot.</p>
        {% endif %}

        <div class="button-group">
            <a href="{{ path('app_lot_index') }}" class="btn btn-primary">Retour</a>
            <a href="{{ path('app_lot_edit', {'id': lot.identifient}) }}" class="btn btn-primary">Modifier</a>
            <br>
            {{ include('lot/_delete_form.html.twig') }}
        </div>

    </div>
{% endblock %}
