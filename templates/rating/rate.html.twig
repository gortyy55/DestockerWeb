<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.css">

<h1 class="text-center mb-4">Rate Stock</h1>

<div class="container">
    <div class="row">
        <div class="col-md-6 offset-md-3">
            {{ form_start(form) }}

            <div class="form-group">
                <label for="rating-stars" style="color: yellow;">Rating:</label>

                <div id="rating-stars"></div>
                {{ form_widget(form.rating, {'attr': {'style': 'display: none;'}}) }}
            </div>

            <div class="form-group text-center">
                <input type="submit" value="Submit" class="btn btn-primary">
                <a href="{{ path('app_stock_index') }}" class="btn btn-secondary">Back to Stock List</a>
            </div>

            {{ form_end(form) }}
        </div>
    </div>
</div>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/rateYo/2.3.2/jquery.rateyo.min.js"></script>

<script>
    $(function () {
        $("#rating-stars").rateYo({
            rating: {{ form.vars.value.rating|default(0) }}, 
            fullStar: true,
            onSet: function (rating, rateYoInstance) {
                $("#{{ form.rating.vars.id }}").val(rating);
            }
        });
    });
</script>
