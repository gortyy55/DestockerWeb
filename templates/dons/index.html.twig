{% extends 'base.html.twig' %}

{% block title %}Donations{% endblock %}

{% block body %}
    <h1>Donations</h1>

    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Association</th>
                <th>Title</th>
                <th>Description</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for don in dons %}
                <tr>
                    <td>{{ don.idDons }}</td>
                    <td>{{ don.amount }}</td>
                    
                    <td>
                        <a href="{{ path('app_dons_show', {'id': don.idDons}) }}">View</a>
                        <a href="{{ path('app_dons_edit', {'id': don.idDons}) }}">Edit</a>
                        <form action="{{ path('app_dons_delete', {'id': don.idDons}) }}" method="post" style="display: inline-block;">
                            <input type="hidden" name="_method" value="DELETE">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ don.idDons) }}">
                            <button type="submit" onclick="return confirm('Are you sure you want to delete this donation?')">Delete</button>
                        </form>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

     <a href="{{ path('app_dons_new', {'iddemand': iddemand}) }}">Add New Donation</a>
{% endblock %}
