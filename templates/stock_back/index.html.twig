{% extends 'baseback.html.twig' %}

{% block title %}Stock{% endblock %}

{% block body %}
<div class="content-wrapper">
    <div class="container">
        <!-- Main content -->
        <section class="content">
            <div class="row">
                {% for stock in stocks %}
                <div class="col-lg-4 col-md-6">
                    <div class="card mb-4">
                        <div class="card-body">
                            <h5 class="card-title">{{ stock.produitname }}</h5>
                            <p class="card-text">Quantity: {{ stock.quantite }}</p>
                            <p class="card-text">Email: {{ stock.mail }}</p>
                            <p class="card-text">Category: {{ stock.getIdCat().getCategoryName() }}</p>
                            <div class="btn-group" role="group" aria-label="Stock Actions">
                                <a href="{{ path('app_stock_show', {'id': stock.id}) }}" class="btn btn-primary">Show</a>
                                <a href="{{ path('app_stock_edit', {'id': stock.id}) }}" class="btn btn-secondary">Edit</a>
                            </div>
                        </div>
                    </div>
                </div>
                {% else %}
                <div class="col-lg-12">
                    <div class="card mb-4">
                        <div class="card-body">
                            <p class="card-text">No records found.</p>
                        </div>
                    </div>
                </div>
                {% endfor %}
            </div>
        </section>
    </div>
</div>

<div class="text-center mt-3">
        <a href="{{ path('app_pdf_generate') }}" class="btn btn-primary">Télécharger PDF</a>
        </div>
        <div class="text-center mt-3">
        <a href="{{ path('app_category_index') }}" class="btn btn-primary">Category</a>
        </div>
{% endblock %}
