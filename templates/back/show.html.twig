{% extends 'baseback.html.twig' %}

{% block title %}List of Demands{% endblock %}

{% block body %}

  <div class="content-wrapper">
      <div class="container-full">
        <!-- Main content -->
        <section class="content">
            <div class="row">
                <div class="col-xl-9 col-12">
                    <div class="box">
                   
                    </div>
                    <input type="text" name="search" id="searchInput" class="form-control fas fa-search" placeholder="Search">
    <div id="DEmandeDescription">
  {% for demand in demands %}
<div class="box pull-up">
            <div class="box-body">
                <div class="d-md-flex justify-content-between align-items-center">
                    <div>
                       
                        <h3 class="mb-0 fw-500"></h3>
                    </div>
                    <div class="mt-10 mt-md-0">
                       
                    </div>
                </div>
                <hr>
                <div class="d-md-flex justify-content-between align-items-center">                                
                    <div class="d-flex justify-content-start align-items-center">
                        <div class="min-w-100">
                            <p class="mb-0 text-fade">Demande ID</p>
                            <h6 class="mb-0">{{ demand.idDemand  }}</h6>
                        </div>
                        <div class="mx-lg-50 mx-20 min-w-70">
                            <p class="mb-0 text-fade">Description</p>
                            <h6 class="mb-0">{{ demand.description }}</h6>
                        </div>
                        <div class="mt-10 mt-md-0">
                        
                    </div>
                        
                    </div>
                </div>
            </div>
        </div>
                                    {% endfor %}
                            

{% endblock %}
