<script>
document.addEventListener("DOMContentLoaded", function() {
    var addFactureLink = document.getElementById('add-facture-link');
    addFactureLink.addEventListener('click', function(event) {
        event.preventDefault(); // Prevent the default action of the link

        // Retrieve idPanier from local storage
        var idPanier = localStorage.getItem('id_panier');
        var totalAmount = "{{ totalAmount }}"; // Get totalAmount from Twig variable

        if (idPanier) {
            // Convert idPanier to integer
            idPanier = parseInt(idPanier);

            // Save totalAmount to local storage
            localStorage.setItem('totalAmount', totalAmount);

            // Construct the URL with the integer idPanier
            var url = "{{ path('add_facture_user', {'idPanier': 'idPanier'}) }}".replace('idPanier', idPanier);
            window.location.href = url;
        } else {
            alert('idPanier not found in local storage');
        }
    });
});
</script>


   



 
	




