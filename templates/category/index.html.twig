{% extends 'baseback.html.twig' %}

{% block title %}Category index{% endblock %}

{% block body %}
	
	<div class="content-wrapper">
    <div class="container">
        <!-- Main content -->
        <section class="content">
            <div class="row">
            {% for category in categories %}
                <div class="col-lg-4 mb-4">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">{{ category.categoryName }}</h5>
                            <p class="card-text">ID: {{ category.id }}</p>
                            <a href="{{ path('app_category_show', {'id': category.id}) }}" class="btn btn-primary">Show</a>
                            <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-secondary">Edit</a>
                        </div>
                    </div>
                </div>
            {% else %}
                <div class="col-lg-12">
                    <p>No records found</p>
                </div>
            {% endfor %}
          </div>
        </section>
    </div>
</div>
	<div class="text-center mt-3">
            <a href="{{ path('app_category_new') }}" class="btn btn-primary">Create new</a>
        </div>
				<div class="col-lg-6 align-self-center">
					<div class="right-content">
						<img src="assets/images/iso-hero.png" alt="">
					</div>
				</div>
			</div>
		</div>
	</div>
   

 
{% endblock %}
